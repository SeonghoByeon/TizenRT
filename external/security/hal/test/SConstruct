# scons -C "~/Workspace/TIZENRT/TizenRT/external/security/hal/test/"

import os

test_file = ["hal_test.c", "hal_auth_test.c", "hal_keymgr_test.c", "hal_ss_test.c", "hal_crypto_test.c", "hal_test_utils.c"]

hal_files = ["../security_hal.c"]

sttool_file = ["../../../stress_tool/st_perf.c"]

csrcs = test_file + hal_files + sttool_file

env = Environment(ENV = os.environ)

env.Append(CFLAGS=['-g'])

env.AppendUnique(CPPDEFINES = ['LINUX'])

env.AppendUnique(CPPPATH = ['.', '../', '../../../include/'])

libraries = ['pthread']

env.Program('hal_test', csrcs, LIBS = libraries)
