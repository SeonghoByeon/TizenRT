import os

test_file = ['test_main.c', 'tem_test.c', 'teq_test.c']
tinyevt_src = ['../tiny_evtmgr.c', '../tiny_evtqueue.c']

src_files = test_file + tinyevt_src

env = Environment(ENV = os.environ)

env.Append(CFLAGS=['-g'])
env.AppendUnique(CPPDEFINES=['LINUX'])
env.AppendUnique(CPPPATH=['.', '../inc', '../'])

libraries = ['pthread']

env.Program('sa_sample', src_files, LIBS=libraries)

